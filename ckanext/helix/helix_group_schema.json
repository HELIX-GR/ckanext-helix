{
  "scheming_version": 1,
  "group_type": "community",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "fields": [
    {
      "field_name": "title",
      "label": {
        "en": "Name",
        "el": "Όνομα"},
      "required": true,
      "validators": "scheming_required unicode",
      "form_snippet": "large_text.html",
      "form_attrs": {"data-module": "slug-preview-target"},
      "form_placeholder": "Full name of the community"
    },
    {
      "field_name": "name",
      "label": "URL",
      "validators": "not_empty unicode name_validator group_name_validator",
      "form_snippet": "slug.html",
      "form_placeholder": "my-group"
    },
    {
      "field_name": "description",
      "label": "Description (English)",
      "form_snippet": "markdown.html",
      "form_placeholder": "A little information about the community (English)",
      "validators": "scheming_required",
      "required": true
    },
    {
      "field_name": "description_greek",
      "label": "Description (Greek)",
      "form_snippet": "markdown.html",
      "form_placeholder": "A little information about the community (Greek)",
      "validators": "scheming_required",
      "required": true
    },
    {
      "field_name": "image_url",
      "label": "Image URL",
      "validators": "unicode remove_whitespace",
      "form_snippet": "upload.html",
      "form_placeholder": "https://www.eawag.ch/mygroup/diatom_micro.jpg",
      "upload_field": "image_upload",
      "upload_clear": "clear_upload",
      "upload_label": "Image",
      "display_snippet": null
    }
   ]
}
